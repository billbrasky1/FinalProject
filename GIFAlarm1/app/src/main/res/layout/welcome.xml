<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView2"
        android:layout_centerInParent="false"
        android:layout_marginTop="22dp"
        android:text="Welcome to GIF Alarm"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnGifAlarm"
        android:layout_alignStart="@+id/btnGifAlarm"
        android:layout_centerVertical="true"
        android:background="@color/colorAccent"
        android:onClick="refresh"
        android:text="Login"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btnGifAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnGifSearch"
        android:layout_alignLeft="@+id/btnGifSearch"
        android:layout_alignStart="@+id/btnGifSearch"
        android:layout_marginBottom="39dp"
        android:background="@color/colorAccent"
        android:onClick="refresh"
        android:text="GIF Alarm"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btnGifSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@color/colorAccent"
        android:onClick="refresh"
        android:text="GIF Search"
        android:textColor="@android:color/background_light"/>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:src="@drawable/giphylogo"/>

</RelativeLayout>