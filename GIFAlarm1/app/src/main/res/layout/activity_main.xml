<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:background="@color/colorAccent"
        android:onClick="refresh"
        android:text="Start Timer"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorAccent"
        android:onClick="refresh"
        android:text="Stop"
        android:textColor="@android:color/background_light"/>

    <Button
        android:id="@+id/refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:background="@color/colorAccent"
        android:onClick="refresh"
        android:text="Refresh"
        android:textColor="@android:color/background_light"/>

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35sp"/>

    <EditText
        android:id="@+id/seconds"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/userInput"
        android:layout_alignEnd="@+id/refresh"
        android:layout_alignLeft="@+id/refresh"
        android:layout_alignRight="@+id/refresh"
        android:layout_alignStart="@+id/refresh"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Seconds"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColorLink="@android:color/white"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/hours"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_above="@+id/userInput"
        android:layout_alignEnd="@+id/btnStart"
        android:layout_alignRight="@+id/btnStart"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Hours"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColorLink="@android:color/white"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/minutes"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_above="@+id/userInput"
        android:layout_centerHorizontal="true"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Minutes"
        android:inputType="number"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColorLink="@android:color/white"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/userInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnStart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:cursorVisible="true"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="What kind of GIF's would you like to see?"
        android:inputType="textPersonName"
        android:textColor="@android:color/white"
        android:textColorHint="@color/colorPrimaryDark"
        android:textColorLink="@android:color/white"
        android:textSize="15sp"/>

    <ImageView
        android:id="@+id/gifsFromGlide"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_above="@+id/seconds"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>
